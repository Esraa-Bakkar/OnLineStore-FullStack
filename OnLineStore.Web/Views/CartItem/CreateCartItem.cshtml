@model OnLineStore.Application.ViewModels.CartItemViewModel

@{
    ViewData["Title"] = "Create Cart Item";
}

<h2>Create New Cart Item</h2>

<form asp-action="CreateCartItem" method="post">
    <div class="mb-3">
        <label asp-for="PId" class="form-label"></label>
        <input asp-for="PId" class="form-control" />
        <span asp-validation-for="PId" class="text-danger"></span>
    </div>
     <div class="mb-3">
        <label asp-for="TId" class="form-label"></label>
        <input asp-for="TId" class="form-control" />
        <span asp-validation-for="TId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Create</button>
    <a asp-action="GetAllCartItems" class="btn btn-secondary">Cancel</a>
</form>

