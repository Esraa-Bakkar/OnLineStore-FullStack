@model OnLineStore.Application.ViewModels.CartItemViewModel

@{
    ViewData["Title"] = "Delete Cart Item";
}

<h2>Delete Cart Item</h2>

<h4>Are you sure you want to delete this item?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Item ID</dt>
        <dd class="col-sm-10">@Model.ItemId</dd>
        <dt class="col-sm-2">Product ID</dt>
        <dd class="col-sm-10">@Model.PId</dd>
        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>
    </dl>

    <form asp-action="DeleteCartItemConfirmed" method="post">
        <input type="hidden" asp-for="ItemId" />
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="GetAllCartItems" class="btn btn-secondary">Cancel</a>
    </form>
</div>
