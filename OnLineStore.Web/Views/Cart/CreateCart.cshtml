@model OnLineStore.Application.Feature.Cart.Command.CreateCartCommand

@{
    ViewData["Title"] = "Create Cart";
}

<h2 class="mb-4">➕ Create New Cart</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="CreateCart" method="post">
            <div class="mb-3">
                <label asp-for="Date" class="form-label">Date</label>
                <input asp-for="Date" type="date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="UserId" class="form-label">User ID</label>
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">💾 Create</button>
            <a asp-action="GetAllCarts" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

