@model OnLineStore.Application.ViewModels.CartViewModel

@{
    ViewData["Title"] = "Update Cart";
}

<h2 class="mb-4">✏️ Edit Cart</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="UpdateCart" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Date" class="form-label">Date</label>
                <input asp-for="Date" type="date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="UserId" class="form-label">User ID</label>
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success">💾 Save Changes</button>
                <a asp-action="GetAllCarts" class="btn btn-secondary">⬅ Back to List</a>
            </div>
        </form>
    </div>
</div>
