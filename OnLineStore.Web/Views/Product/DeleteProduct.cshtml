@model OnLineStore.Application.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Delete Product";
}

<h1>Are you sure you want to delete this product?</h1>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <td>@Model.PId</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.PName</td>
    </tr>
    <tr>
        <th>Price</th>
        <td>@Model.Price</td>
    </tr>
    <tr>
        <th>Category ID</th>
        <td>@Model.CId</td>
    </tr>
</table>

<form asp-action="DeleteProduct" method="post">
    <input type="hidden" asp-for="PId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="GetAllProducts" class="btn btn-secondary">Cancel</a>
</form>
