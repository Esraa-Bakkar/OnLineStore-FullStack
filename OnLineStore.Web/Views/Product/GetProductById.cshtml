@model OnLineStore.Application.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Product Details";
}

<h1>Product Details</h1>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <td>@Model.PId</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.PName</td>
    </tr>
    <tr>
        <th>Price</th>
        <td>@Model.Price</td>
    </tr>
    <tr>
        <th>Category ID</th>
        <td>@Model.CId</td>
    </tr>
   
</table>

<a asp-action="GetAllProducts" class="btn btn-secondary">Back to List</a>
<a asp-action="UpdateProduct" asp-route-id="@Model.PId" class="btn btn-primary">Edit</a>
<a asp-action="DeleteProduct" asp-route-id="@Model.PId" class="btn btn-danger">Delete</a>
