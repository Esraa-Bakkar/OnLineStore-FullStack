@model IEnumerable<OnLineStore.Application.ViewModels.ProductViewModel>

@{
    Layout = "~/Views/Shared/_StoreLayOut.cshtml";
    ViewData["Title"] = "Products";
}

<div class="row">
    @if (!Model.Any())
    {
            <div class="col-12">
                <div class="alert alert-warning text-center">
                    No products available at the moment.
                </div>
            </div>
    }
    else
    {
        foreach (var product in Model)
        {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 shadow-sm">
                            <img src="@product.ImgePath"
                                 class="card-img-top img-fluid rounded"
                                 alt="@product.PName"
                                 style="max-height: 300px; object-fit: contain;" />

                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title text-center">@product.PName</h5>

                                <form asp-controller="Cart" asp-action="AddToCart" method="post" class="mt-auto">
                                    <input type="hidden" name="productId" value="@product.PId" />
                                    <button type="submit" class="btn btn-success w-100">
                                        <i class="fas fa-shopping-cart me-1"></i> Add to Cart
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
        }
    }
</div>
