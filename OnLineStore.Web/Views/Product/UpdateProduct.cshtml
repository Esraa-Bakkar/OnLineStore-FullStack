@model OnLineStore.Application.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Update Product";
}

<h1>Update Product</h1>

<form asp-action="UpdateProduct" method="post">
    <input type="hidden" asp-for="PId" />


    <div class="form-group">
        <label asp-for="PName" class="control-label"></label>
        <input asp-for="PName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CId" class="control-label"></label>
        <input asp-for="CId" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="GetAllProducts" class="btn btn-secondary">Cancel</a>
</form>
