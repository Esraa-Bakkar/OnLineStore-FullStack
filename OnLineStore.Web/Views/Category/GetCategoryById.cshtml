@model OnLineStore.Application.ViewModels.CategoryViewModel

@{
    ViewData["Title"] = "Category Details";
}

<h2>Category Details</h2>

<div class="card p-3 shadow">
    <table class="table table-bordered table-striped">
        <tr>
            <th>ID</th>
            <td>@Model.CId</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>@Model.CName</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>@Model.Description</td>
        </tr>
    </table>
</div>

<a asp-action="GetAllCategories" asp-controller="Category" class="btn btn-primary mt-3">
    Back to Categories
</a>
