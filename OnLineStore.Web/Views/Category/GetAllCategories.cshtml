@model IEnumerable<OnLineStore.Application.ViewModels.CategoryViewModel>

@{
    ViewData["Title"] = "Categories List";
}

<h2 class="mb-3">Categories List</h2>


<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Category ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>@item.CId</td>
                    <td>@item.CName</td>
                    <td>@item.Description</td>
                    <td>
                        <a asp-action="GetCategory" asp-route-id="@item.CId" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.CId" class="btn btn-warning btn-sm">Edit</a>

                        <form asp-action="DeleteCategory" asp-route-id="@item.CId" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm"
                                    onclick="return confirm('Are you sure you want to delete this category?');">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary mt-3">➕ Create New Category</a>