@model IEnumerable<OnLineStore.Application.ViewModels.CategoryViewModel>

@{
    ViewData["Title"] = "GetAllCategories";
}

<h2>GetAllCategories</h2>

<div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th> 
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CId</td>
                    <td>@item.CName</td>
                    <td>@item.Description</td>
                    <td>
                      
                        <a asp-action="Edit" asp-route-id="@item.CId" class="btn btn-sm btn-warning">Edit</a>


                     
                        <form asp-action="DeleteCategory" asp-route-id="@item.CId" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-sm btn-danger"
                                    onclick="return confirm('Are you sure you want to delete this category?');">
                                Delete
                            </button>
                                    <a asp-action="GetCategory" asp-route-id="@item.CId" class="btn btn-sm btn-info">Details</a>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<a asp-action="Index" asp-controller="Home" class="btn btn-primary">Home</a>
