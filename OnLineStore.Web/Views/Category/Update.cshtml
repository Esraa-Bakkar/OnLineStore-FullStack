@model OnLineStore.Application.ViewModels.CategoryViewModel

@{
    ViewData["Title"] = "Update Category";
}

<h2>Update Category</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="CId" />

    <div class="form-group">
        <label asp-for="CName"></label>
        <input asp-for="CName" class="form-control" />
        <span asp-validation-for="CName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="GetAllCategory" class="btn btn-secondary">Cancel</a>
</form>
