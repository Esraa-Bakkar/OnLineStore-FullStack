<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Esoo Store</title>

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500;600;700&family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- Icon Fonts -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
      <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
<h1 class="display-5 text-primary m-0">
  <i class="fas fa-shopping-bag text-secondary me-2"></i>
  Esoo Store
</h1>


    <!-- Library Stylesheets -->
    <link href="~/lib/animate/animate.min.css" rel="stylesheet" />
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" />

    <!-- Custom Stylesheets -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
</head>

<body>
    <!-- Spinner Start -->
    <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <!-- Spinner End -->

    <!-- Topbar Start -->
    <div class="container-fluid px-5 d-none d-lg-block border-bottom">
        <div class="row gx-0 align-items-center" style="height: 45px;">
            <!-- Left: Help / Support / Contact -->
            <div class="col-lg-4 d-flex align-items-center justify-content-start">
                <div class="d-inline-flex align-items-center">
                    <a href="/help" class="text-muted me-2">Help</a><small>/</small>
                    <a href="/support" class="text-muted mx-2">Support</a><small>/</small>
                    <a href="/contact" class="text-muted ms-2">Contact</a>
                </div>
            </div>

            <!-- Center: Phone -->
            <div class="col-lg-4 d-flex align-items-center justify-content-center">
                <small class="text-dark me-2"><i class="fa fa-phone-alt me-1"></i> Call Us:</small>
                <a href="tel:+0121234567890" class="text-muted">(+012) 1234 567890</a>
            </div>

            <!-- Right: Dashboard / Login / Register -->
            <div class="col-lg-4 d-flex align-items-center justify-content-end">
                <div class="d-inline-flex align-items-center">
                    <a href="/dashboard" class="text-muted me-3"><i class="fa fa-home me-1"></i> My Dashboard</a>
                    <a class="text-decoration-none" asp-controller="Account" asp-action="Login" style="color: orange; font-weight: bold; margin-right: 15px;">Login</a>
                    <a class="text-decoration-none" asp-controller="Account" asp-action="Register" style="color: orange; font-weight: bold;">Register</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Topbar End -->

    <!-- Navbar Start -->
    <div class="container-fluid nav-bar p-0">
        <div class="row gx-0 bg-primary px-5 align-items-center">
            <div class="col-12 col-lg-9">
                <nav class="navbar navbar-expand-lg navbar-light bg-primary">
                    <a href="@Url.Action("Index", "Home")" class="navbar-brand d-block d-lg-none">
                        <h1 class="display-5 text-secondary m-0">
                            <i class="fas fa-shopping-bag text-white me-2"></i>Esoo Store
                        </h1>
                    </a>
                    <button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                        <span class="fa fa-bars fa-1x"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarCollapse">
                        <div class="navbar-nav ms-auto py-0">
                            <a href="@Url.Action("GetAllUsers", "User")" class="nav-item nav-link active">Users</a>
                            <a href="@Url.Action("GetAllProducts", "Product")" class="nav-item nav-link active">Products</a>
                            <a href="@Url.Action("GetAllOrders", "Order")" class="nav-item nav-link">Orders</a>
                            <a href="@Url.Action("GetAllCategory", "Category")" class="nav-item nav-link active">Categories</a>
                            <a href="@Url.Action("GetAllReviews", "Review")" class="nav-item nav-link active">Reviews</a>
                            <a href="@Url.Action("GetAllCarts", "Cart")" class="nav-item nav-link active">Carts</a>
                            <a href="@Url.Action("GetAllCartItems", "CartItem")" class="nav-item nav-link active">CartItems</a>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
    <!-- Navbar End -->

    <!-- Main Content -->
    <div class="container">
        @RenderBody()
    </div>

    <!-- Footer Start -->
    <div class="container-fluid bg-dark text-light py-5 mt-5">
        <div class="container text-center">
            <p class="mb-0">&copy; @DateTime.Now.Year - Esoo Store. All Rights Reserved.</p>
        </div>
    </div>
    <!-- Footer End -->

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/wow/wow.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/waypoints/waypoints.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template JS -->
    <script src="~/js/main.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
