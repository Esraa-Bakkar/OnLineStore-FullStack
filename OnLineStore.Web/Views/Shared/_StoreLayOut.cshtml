<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Esoo Store</title>

    <!-- Fonts & Icons -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Roboto&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- CSS -->
    <link href="~/lib/animate/animate.min.css" rel="stylesheet" />
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
</head>

<body>
    <!-- Topbar -->
    <div class="container-fluid px-5 d-none d-lg-block border-bottom">
        <div class="row gx-0 align-items-center" style="height: 45px;">
            <div class="col-lg-6 d-flex align-items-center">
                <div class="d-inline-flex align-items-center">
                    <a href="/help" class="text-muted me-2">Help</a><small>/</small>
                    <a href="/support" class="text-muted mx-2">Support</a><small>/</small>
                    <a href="/contact" class="text-muted ms-2">Contact</a>
                </div>
            </div>
            <div class="col-lg-6 d-flex justify-content-end">
                <a href="/Account/Login" class="text-muted me-3"><i class="fas fa-sign-in-alt me-1"></i> Login</a>
                <a href="/Account/Register" class="text-muted"><i class="fas fa-user-plus me-1"></i> Register</a>
            </div>
        </div>
    </div>

    <!-- Navbar -->
    <div class="container-fluid nav-bar bg-primary p-0">
        <div class="row gx-0 px-5">
            <div class="col-lg-12">
                <nav class="navbar navbar-expand-lg navbar-light bg-primary">
                    <a href="/" class="navbar-brand text-white fw-bold">
                        <i class="fas fa-shopping-bag text-white me-2"></i> Esoo Store
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#storeNavbar">
                        <span class="fa fa-bars"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="storeNavbar">
                        <div class="navbar-nav ms-auto">
                           
<a href="/Product/GetAllProductsForCustmer" class="nav-item nav-link text-white">Products</a>
                          <a href="/Cart/GetCartByID" class="nav-item nav-link text-white"><i class="fas fa-shopping-cart"></i>MyCart</a>
                            <a href="/Account/Profile" class="nav-item nav-link text-white">My Account</a>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>

    <!-- Main -->
    <div class="container my-5">
        @RenderBody()
    </div>

    <!-- Footer -->
    <div class="container-fluid bg-dark text-light text-center py-4">
        <p class="mb-0">&copy; @DateTime.Now.Year - Esoo Store. All Rights Reserved.</p>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/js/main.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>

