@model OnLineStore.Application.ViewModels.OrderViewModel

@{
    ViewData["Title"] = "Delete Order";
}

<h2>Delete Order</h2>

<div class="alert alert-warning">
    ⚠️ Are you sure you want to delete this order:
    <strong>Order ID = @Model.OId</strong> (Customer = @Model.UId) ?
</div>

<form asp-action="DeleteOrderConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.OId" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="GetAllOrders" class="btn btn-secondary">Cancel</a>
</form>
