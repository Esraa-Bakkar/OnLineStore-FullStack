@model OnLineStore.Application.ViewModels.UserViewModel

@{
    ViewData["Title"] = "My Account";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">My Account</h4>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <label class="col-sm-3 font-weight-bold">Name:</label>
                        <div class="col-sm-9">@Model.Name</div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-3 font-weight-bold">Email:</label>
                        <div class="col-sm-9">@Model.Email</div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-3 font-weight-bold">Phone:</label>
                        <div class="col-sm-9">@Model.Phone</div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-3 font-weight-bold">Address:</label>
                        <div class="col-sm-9">@Model.Address</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
