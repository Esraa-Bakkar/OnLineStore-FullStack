@model List<OnLineStore.Application.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "All Users";
}

<h2>All Users</h2>

<a asp-action="CreateUser" class="btn btn-success">Create New User</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.Phone</td>
                <td>@user.Address</td>
                <td>
                    <a asp-action="GetUserByID" asp-route-id="@user.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="UpdateUser" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
