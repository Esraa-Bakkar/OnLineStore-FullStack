@model IEnumerable<OnLineStore.Application.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "Users";
}

<h2 class="mb-3">Users List</h2>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>User ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.Phone</td>
                    <td>@user.Address</td>
                    <td>
                        <!-- Details -->
                        <a asp-action="GetUserById" asp-route-id="@user.Id" class="btn btn-info btn-sm">Details</a>

                        <!-- Update -->
                        <a asp-action="UpdateUser" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Update</a>

                        <!-- Delete -->
                        <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
        }
    </tbody>
</table>

<a asp-action="CreateUser" class="btn btn-primary mt-3">➕ Create New User</a>
