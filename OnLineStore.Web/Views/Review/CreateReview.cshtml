@model OnLineStore.Application.Feature.Review.Command.CreateReviewCommand

@{
    ViewData["Title"] = "Create Review";
}

<h2>Create New Review</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="CreateReview" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="UId" class="control-label">User ID</label>
                <input asp-for="UId" class="form-control" />
                <span asp-validation-for="UId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PId" class="control-label">Product ID</label>
                <input asp-for="PId" class="form-control" />
                <span asp-validation-for="PId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" type="number" min="1" max="5" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Comment" class="control-label"></label>
                <textarea asp-for="Comment" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="GetAllReviews" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>