@model OnLineStore.Application.ViewModels.ReviewViewModel

@{
    ViewData["Title"] = "Review Details";
}

<div>
    <h2 class="mb-3">Review Details</h2>
    <hr />

   
    @if (Model != null)
    {
        
        <dl class="row">
            <dt class="col-sm-2">
                Review ID
            </dt>
            <dd class="col-sm-10">
                @Model.RId
            </dd>

            <dt class="col-sm-2">
                User ID
            </dt>
            <dd class="col-sm-10">
                @Model.UId
            </dd>

            <dt class="col-sm-2">
                Product ID
            </dt>
            <dd class="col-sm-10">
                @Model.PId
            </dd>

            <dt class="col-sm-2">
                Rating
            </dt>
            <dd class="col-sm-10">
                @Model.Rating
            </dd>

            <dt class="col-sm-2">
                Comment
            </dt>
            <dd class="col-sm-10">
                @Model.Comment
            </dd>
        </dl>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            Review not found.
        </div>
    }
</div>
<div class="mt-3">
    
    <a asp-action="UpdateReview" asp-route-id="@Model?.RId" class="btn btn-warning">Edit</a> |

    <a asp-action="GetAllReviews" class="btn btn-secondary">Back to List</a>
</div>