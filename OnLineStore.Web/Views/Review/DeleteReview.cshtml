@model OnLineStore.Application.ViewModels.ReviewViewModel

@{
    ViewData["Title"] = "Delete Review";
}

<h2>Delete Confirmation</h2>
<h3 class="text-danger">Are you sure you want to delete this review?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Review ID</dt>
        <dd class="col-sm-10">@Model.RId</dd>

        <dt class="col-sm-2">User ID</dt>
        <dd class="col-sm-10">@Model.UId</dd>

        <dt class="col-sm-2">Product ID</dt>
        <dd class="col-sm-10">@Model.PId</dd>

        <dt class="col-sm-2">Rating</dt>
        <dd class="col-sm-10">@Model.Rating</dd>

        <dt class="col-sm-2">Comment</dt>
        <dd class="col-sm-10">@Model.Comment</dd>
    </dl>

    <form asp-action="DeleteReview" method="post">
        @Html.AntiForgeryToken()

    
        <input type="hidden" asp-for="RId" />

        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="GetAllReviews" class="btn btn-secondary">Cancel</a>
    </form>
</div>